{
	"version": 2,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 20,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
			}
		},
		{
			"name": "windows-base",
			"inherits": [ "base" ],
			"hidden": true,
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"hostOS": [ "Windows" ]
				}
			}
		},

		{
			"name": "clang-cl",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang-cl",
				"CMAKE_CXX_COMPILER": "clang-cl"
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"intelliSenseMode": "windows-clang-x64"
				}
			}
		},

		{
			"name": "c++14",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "14"
			}
		},
		{
			"name": "c++17",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "17"
			}
		},
		{
			"name": "c++20",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "20"
			}
		},

		{
			"name": "debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},

		{
			"name": "x64",
			"inherits": [ "windows-base" ],
			"hidden": true,
			"architecture": {
				"value": "x64",
				"strategy": "external"
			}
		},
		{
			"name": "x86",
			"inherits": [ "windows-base" ],
			"hidden": true,
			"architecture": {
				"value": "x86",
				"strategy": "external"
			}
		},


		{
			"name": "x64-c++14-debug",
			"inherits": [ "x64", "c++14", "debug" ]
		},
		{
			"name": "x64-c++17-debug",
			"inherits": [ "x64", "c++17", "debug" ]
		},
		{
			"name": "x64-c++20-debug",
			"inherits": [ "x64", "c++20", "debug" ]
		},
		{
			"name": "x64-c++14-release",
			"inherits": [ "x64", "c++14", "release" ]
		},
		{
			"name": "x64-c++17-release",
			"inherits": [ "x64", "c++17", "release" ]
		},
		{
			"name": "x64-c++20-release",
			"inherits": [ "x64", "c++20", "release" ]
		},
		{
			"name": "x86-c++14-debug",
			"inherits": [ "x86", "c++14", "debug" ]
		},
		{
			"name": "x86-c++17-debug",
			"inherits": [ "x86", "c++17", "debug" ]
		},
		{
			"name": "x86-c++20-debug",
			"inherits": [ "x86", "c++20", "debug" ]
		},
		{
			"name": "x86-c++14-release",
			"inherits": [ "x86", "c++14", "release" ]
		},
		{
			"name": "x86-c++17-release",
			"inherits": [ "x86", "c++17", "release" ]
		},
		{
			"name": "x86-c++20-release",
			"inherits": [ "x86", "c++20", "release" ]
		},

		{
			"name": "clang-x64-c++14-debug",
			"inherits": [ "clang-cl", "x64", "c++14", "debug" ]
		},
		{
			"name": "clang-x64-c++17-debug",
			"inherits": [ "clang-cl", "x64", "c++17", "debug" ]
		},
		{
			"name": "clang-x64-c++20-debug",
			"inherits": [ "clang-cl", "x64", "c++20", "debug" ]
		},
		{
			"name": "clang-x64-c++14-release",
			"inherits": [ "clang-cl", "x64", "c++14", "release" ]
		},
		{
			"name": "clang-x64-c++17-release",
			"inherits": [ "clang-cl", "x64", "c++17", "release" ]
		},
		{
			"name": "clang-x64-c++20-release",
			"inherits": [ "clang-cl", "x64", "c++20", "release" ]
		}
	]
}
